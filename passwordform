		        	echo "1 $cfullname"
		        	echo "2 $cuser"
		        	echo "3 $cpass"
		        	echo "4 $cpassroot"
		        	echo "5 $chostname"

		         [[ "$cuser" == "root" ]] && { info "erro"; sh_confadduser; }
