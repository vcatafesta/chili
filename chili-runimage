#sudo qemu-system-x86_64 \
#-machine accel=kvm:tcg \
#-m 4096 \
#-bios /usr/share/ovmf/OVMF.fd \
#-audiodev pa,id=pa,server=unix:${XDG_RUNTIME_DIR}/pulse/native,out.stream-name=foobar,in.stream-name=foobar \
