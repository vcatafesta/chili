	aTux+=("${green}                                            .','")
	aTux+=("${green}                                          .;,;;  ;;''','")
	aTux+=("${green}                                       ,,  ;;;;;;;;;;;;'")
	aTux+=("\033[01;39m                           .,:clll:;. \033[01;32m,;;  ;;;;;;;;;;;'              \033[01;39m")
	aTux+=("\033[01;39m                           .,:clll:;. \033[01;32m,;;  ;;;;;;;;;;;'              \033[01;39m")
	aTux+=("\033[01;39m                       ',,'.     ..;o0N0d;\033[01;32m,;;;;;;;;                  \033[01;39m")
	aTux+=("\033[01;39m                    .c;                ;OM0l\033[01;32m,;;;;;;;.                \033[01;39m")
	aTux+=("\033[01;39m                   ox                    .0MK:\033[01;32m.;;;;.                 \033[01;39m")
